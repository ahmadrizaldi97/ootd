        <!--Disini Untuk Kepala-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/bodyContainer">
        </FrameLayout>

        <!--Disini Untuk Kepala-->
        <FrameLayout
            android:layout_width="match_parent"
